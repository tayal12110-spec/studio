{
  "entities": {
    "Employee": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Employee",
      "type": "object",
      "description": "Represents an employee in the PayEase system.",
      "properties": {
        "employeeId": {
          "type": "string",
          "description": "The unique identifier for the employee."
        },
        "name": {
          "type": "string",
          "description": "The name of the employee."
        },
        "email": {
          "type": "string",
          "description": "The email address of the employee.",
          "format": "email"
        },
        "phoneNumber": {
          "type": "string",
          "description": "The phone number of the employee."
        },
        "status": {
          "type": "string",
          "description": "The status of the employee.",
          "enum": [
            "Active",
            "Inactive",
            "On Leave",
            "Terminated"
          ]
        },
        "avatar": {
          "type": "string",
          "description": "The avatar character for the employee."
        },
        "department": {
          "type": "string",
          "description": "The department the employee belongs to.",
          "enum": [
            "Engineering",
            "HR",
            "Marketing",
            "Sales"
          ]
        },
        "baseSalary": {
          "type": "number",
          "description": "The base salary of the employee."
        },
        "personalEmail": {
          "type": "string",
          "description": "The personal email address of the employee.",
          "format": "email"
        },
        "dateOfBirth": {
          "type": "string",
          "description": "The employee's date of birth.",
          "format": "date"
        },
        "gender": {
          "type": "string",
          "description": "The gender of the employee."
        },
        "maritalStatus": {
          "type": "string",
          "description": "The marital status of the employee."
        },
        "bloodGroup": {
          "type": "string",
          "description": "The blood group of the employee."
        },
        "guardianName": {
          "type": "string",
          "description": "The name of the employee's guardian."
        },
        "emergencyContactName": {
          "type": "string",
          "description": "The name of the emergency contact."
        },
        "emergencyContactRelationship": {
          "type": "string",
          "description": "The relationship of the emergency contact to the employee."
        },
        "emergencyContactMobile": {
          "type": "string",
          "description": "The mobile number of the emergency contact."
        },
        "emergencyContactAddress": {
          "type": "string",
          "description": "The address of the emergency contact."
        },
        "branch": {
          "type": "string",
          "description": "The branch the employee works at."
        },
        "employeeType": {
          "type": "string",
          "description": "The type of employment.",
          "enum": [
            "Full Time",
            "Part Time",
            "Contract"
          ]
        },
        "jobTitle": {
          "type": "string",
          "description": "The employee's job title."
        },
        "dateOfJoining": {
          "type": "string",
          "description": "The date the employee joined.",
          "format": "date"
        },
        "dateOfLeaving": {
          "type": "string",
          "description": "The date the employee left.",
          "format": "date"
        },
        "pfAccountNumber": {
          "type": "string",
          "description": "Provident Fund account number."
        },
        "esiAccountNumber": {
          "type": "string",
          "description": "Employee State Insurance account number."
        },
        "customFields": {
          "type": "object",
          "description": "A map for storing custom employee data.",
          "additionalProperties": {
            "type": "string"
          }
        },
        "aadhaarNumber": {
          "type": "string",
          "description": "The employee's Aadhaar number."
        },
        "panNumber": {
          "type": "string",
          "description": "The employee's PAN number."
        },
        "drivingLicenseNumber": {
          "type": "string",
          "description": "The employee's driving license number."
        },
        "voterIdNumber": {
          "type": "string",
          "description": "The employee's Voter ID number."
        },
        "uanNumber": {
          "type": "string",
          "description": "The employee's Universal Account Number (UAN)."
        },
        "currentAddress": {
          "type": "string",
          "description": "The employee's current address."
        },
        "permanentAddress": {
          "type": "string",
          "description": "The employee's permanent address."
        },
        "canViewOwnAttendance": {
          "type": "boolean",
          "description": "Indicates if the employee can view their own attendance."
        },
        "pastEmployment": {
          "type": "object",
          "description": "Details of the employee's past employment.",
          "properties": {
            "companyName": {
              "type": "string"
            },
            "designation": {
              "type": "string"
            },
            "joiningDate": {
              "type": "string",
              "format": "date"
            },
            "leavingDate": {
              "type": "string",
              "format": "date"
            },
            "currency": {
              "type": "string"
            },
            "salary": {
              "type": "number"
            },
            "companyGst": {
              "type": "string"
            }
          }
        },
        "accountHolderName": {
          "type": "string",
          "description": "The name of the bank account holder."
        },
        "accountNumber": {
          "type": "string",
          "description": "The bank account number."
        },
        "bankName": {
          "type": "string",
          "description": "The name of the bank."
        },
        "ifscCode": {
          "type": "string",
          "description": "The IFSC code of the bank branch."
        },
        "upiId": {
          "type": "string",
          "description": "The UPI ID of the employee."
        },
        "permission": {
          "type": "string",
          "description": "The user role or permission level for the employee.",
          "enum": [
            "Employee",
            "Attendance Manager",
            "Branch Admin",
            "Advanced Attendance Manager"
          ]
        },
        "penaltyAndOvertime": {
          "type": "object",
          "description": "Settings for penalties and overtime.",
          "properties": {
            "lateComing": {
              "type": "object",
              "properties": {
                "allowedDays": {
                  "type": "number"
                },
                "gracePeriod": {
                  "type": "string"
                },
                "deductionType": {
                  "type": "string",
                  "enum": [
                    "day",
                    "hour"
                  ]
                },
                "deductionRate": {
                  "type": "number"
                }
              }
            },
            "earlyLeaving": {
              "type": "object",
              "properties": {
                "allowedDays": {
                  "type": "number"
                },
                "gracePeriod": {
                  "type": "string"
                },
                "deductionType": {
                  "type": "string",
                  "enum": [
                    "day",
                    "hour"
                  ]
                },
                "deductionRate": {
                  "type": "number"
                }
              }
            },
            "overtime": {
              "type": "object",
              "properties": {
                "weekOffPay": {
                  "type": "string"
                },
                "publicHolidayPay": {
                  "type": "string"
                },
                "extraHoursPay": {
                  "type": "string"
                },
                "gracePeriod": {
                  "type": "string"
                }
              }
            }
          }
        },
        "leaveBalances": {
          "type": "object",
          "description": "Remaining leave balances for the employee.",
          "properties": {
            "privileged": {
              "type": "number"
            },
            "sick": {
              "type": "number"
            },
            "casual": {
              "type": "number"
            }
          }
        },
        "notificationsEnabled": {
          "type": "boolean",
          "description": "Indicates if notifications are enabled for the employee."
        },
        "canUseLocationTracking": {
          "type": "boolean",
          "description": "Indicates if the employee can use location tracking."
        },
        "canUseCrmLite": {
          "type": "boolean",
          "description": "Indicates if the employee can use CRM Lite."
        }
      },
      "required": [
        "employeeId",
        "name",
        "email",
        "status",
        "avatar",
        "department",
        "baseSalary"
      ]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the PayEase system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "email"
      ]
    },
    "Attendance": {
      "title": "Attendance",
      "type": "object",
      "description": "Represents an employee's attendance record for a specific day.",
      "properties": {
        "employeeId": {
          "type": "string",
          "description": "The ID of the employee this record belongs to."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date of the attendance record (YYYY-MM-DD)."
        },
        "status": {
          "type": "string",
          "enum": [
            "ABSENT",
            "HALF DAY",
            "PRESENT",
            "WEEK OFF",
            "HOLIDAY",
            "PAID LEAVE",
            "HALF DAY LEAVE",
            "UNPAID LEAVE"
          ]
        },
        "note": {
          "type": "string",
          "description": "Optional note about the attendance."
        }
      },
      "required": [
        "employeeId",
        "date",
        "status"
      ]
    },
    "Document": {
      "title": "Document",
      "type": "object",
      "description": "Represents a document uploaded for an employee.",
      "properties": {
        "employeeId": {
          "type": "string",
          "description": "The ID of the employee this document belongs to."
        },
        "name": {
          "type": "string",
          "description": "The name of the document (e.g., 'Aadhaar Card')."
        },
        "fileUrl": {
          "type": "string",
          "description": "The URL of the uploaded document file.",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the document was uploaded."
        }
      },
      "required": [
        "employeeId",
        "name",
        "fileUrl",
        "createdAt"
      ]
    },
    "LeaveRequest": {
      "title": "Leave Request",
      "type": "object",
      "description": "Represents a leave request from an employee.",
      "properties": {
        "employeeId": {
          "type": "string"
        },
        "leaveType": {
          "type": "string",
          "enum": [
            "Privileged",
            "Sick",
            "Casual"
          ]
        },
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        },
        "reason": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "Approved",
            "Rejected"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "employeeId",
        "leaveType",
        "startDate",
        "endDate",
        "status",
        "createdAt"
      ]
    },
    "ReimbursementRequest": {
      "title": "Reimbursement Request",
      "type": "object",
      "description": "Represents a reimbursement request from an employee.",
      "properties": {
        "employeeId": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "reason": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "Approved",
            "Rejected"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "employeeId",
        "amount",
        "status",
        "createdAt"
      ]
    },
    "Branch": {
      "title": "Branch",
      "type": "object",
      "description": "Represents a company branch.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the branch."
        },
        "address": {
          "type": "string",
          "description": "The address of the branch."
        },
        "radius": {
          "type": "number",
          "description": "The geofence radius in meters."
        }
      },
      "required": [
        "name",
        "address",
        "radius"
      ]
    },
    "Department": {
      "title": "Department",
      "type": "object",
      "description": "Represents a company department.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the department."
        }
      },
      "required": ["name"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/User"
      },
      "description": "Stores user profile information. Owned by the user (path-based ownership)."
    },
    "/employees/{employeeId}": {
      "schema": {
        "$ref": "#/backend/entities/Employee"
      },
      "description": "Stores employee data. All authenticated users can access."
    },
    "/employees/{employeeId}/attendance/{date}": {
      "schema": {
        "$ref": "#/backend/entities/Attendance"
      },
      "description": "Stores daily attendance records for each employee. The document ID is the date in 'YYYY-MM-DD' format."
    },
    "/employees/{employeeId}/documents/{documentId}": {
      "schema": {
        "$ref": "#/backend/entities/Document"
      },
      "description": "Stores uploaded documents for each employee."
    },
    "/employees/{employeeId}/leaveRequests/{leaveRequestId}": {
      "schema": {
        "$ref": "#/backend/entities/LeaveRequest"
      },
      "description": "Stores leave requests for each employee."
    },
    "/employees/{employeeId}/reimbursementRequests/{reimbursementRequestId}": {
      "schema": {
        "$ref": "#/backend/entities/ReimbursementRequest"
      },
      "description": "Stores reimbursement requests for each employee."
    },
    "/branches/{branchId}": {
      "schema": {
        "$ref": "#/backend/entities/Branch"
      },
      "description": "Stores company branch information. All authenticated users can access."
    },
    "/departments/{departmentId}": {
      "schema": {
        "$ref": "#/backend/entities/Department"
      },
      "description": "Stores company department information. All authenticated users can access."
    }
  }
}
