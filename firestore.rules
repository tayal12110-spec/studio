
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /employees/{employeeId} {
      allow read, write: if isSignedIn();
    }

    match /employees/{employeeId}/attendance/{attendanceDoc=**} {
      allow read, write: if isSignedIn();
    }

    match /employees/{employeeId}/documents/{document=**} {
      allow read, write: if isSignedIn();
    }
    match /employees/{employeeId}/leaveRequests/{leaveRequest=**} {
      allow read, write: if isSignedIn();
    }
    match /employees/{employeeId}/reimbursementRequests/{reimbursementRequest=**} {
      allow read, write: if isSignedIn();
    }
  }
}
